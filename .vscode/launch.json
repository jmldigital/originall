    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "python": "D:/django-on-docker/app/env/Scripts/python.exe",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver",
                "--noreload" 
            ],

            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput",
                "DjangoDebugging"
            ],

            "django": true,
            "justMyCode": true
        }
    ]
}